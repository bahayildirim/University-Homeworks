        <TextBox x:Name="r" HorizontalAlignment="Left" Height="23" Margin="228,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="g" HorizontalAlignment="Left" Height="23" Margin="228,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
