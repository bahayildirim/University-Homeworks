        <Label Content="Color Picker" HorizontalAlignment="Left" Margin="139,33,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="Red:" HorizontalAlignment="Left" Margin="139,123,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Bold"/>
